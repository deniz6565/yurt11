    <table class="table table-striped">
      <thead>
        <tr>
          <th>Article Title</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        {%  for article in articles %}
          <tr>
            <td>{{ article.name }}</td>
            <td>
              <a href="/articleDetail/{{ article.id}}"  class="btn btn-dark">Show</a>
            </td>
            
            <td>
              <a href="/articleUpdate/{{ article.id}}" class="btn btn-info">Update</a>
            </td>

            <td>
              <a href="/articleDelete/{{ article.id}}" class="btn btn-danger">Delete</a>
            </td>
          </tr>
        {% endfor %}
      </tbody>
      
    </table>
